package  {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.ui.Mouse;		import com.greensock.TweenMax;	public class Splash extends MovieClip	{		public var main:Main;				public function Splash(main:Main) 		{			this.main = main;						addEventListener(Event.ADDED_TO_STAGE, addedToStage);		}				public function addedToStage(event:Event)		{			x = stage.stageWidth / 2;			y = stage.stageHeight / 2;						this.button.addEventListener(MouseEvent.MOUSE_DOWN, buttonMouseDown);			stage.addEventListener(MouseEvent.MOUSE_UP, buttonMouseUp);						this.button.addEventListener(MouseEvent.CLICK, buttonClick);						// Hover effect			this.button.addEventListener(MouseEvent.MOUSE_OVER, buttonMouseOver);			this.button.addEventListener(MouseEvent.MOUSE_OUT, buttonMouseOut);		}				public function buttonClick(event:MouseEvent)		{			this.visible = false;			main.startGame();		}				public function buttonMouseDown(event:MouseEvent)		{			TweenMax.to(this.button, 0.1, { scaleX:0.9, scaleY:0.9 });		}						public function buttonMouseUp(event:MouseEvent)		{			TweenMax.to(this.button, 0.1, { scaleX:1, scaleY:1 });		}				public function buttonMouseOver(event:MouseEvent)		{			Mouse.cursor = "button";			TweenMax.to(this.button, 0.05, { scaleX:1.01, scaleY:1.01 });		}						public function buttonMouseOut(event:MouseEvent)		{			Mouse.cursor = "auto";			TweenMax.to(this.button, 0.1, { scaleX:1, scaleY:1 });		}	}}