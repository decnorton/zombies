package  {	import flash.display.MovieClip;	import flash.events.Event;	import flash.geom.Point;		public class Enemy extends MovieClip	{		public var main:Main;						// Editable				public var health:Number = 100;		public var speed:Number = 1;		public var damage:Number = 10;	// End Editable				public var distance:Number = 200; // Move 10 pixels		public var startX:Number = 0; // Move 10 pixels						public var stageX:Number;		public var stageY:Number;				public var timeSinceLastShot = 0;		public function Enemy(main:Main, x:Number, y:Number) 		{			this.main = main;						this.x = x;			this.y = y;			startX = this.x;						addEventListener(Event.ADDED_TO_STAGE, addedToStage);		}				public function addedToStage(event:Event)		{			// Position						/*			while(x < 100) {				x = Math.random() * stage.stageWidth;			}			*/		}		public function hit()		{			health -= 25;						if(health <= 0)			{				this.visible = false;				main.player.killed++;							}		}				public function update()		{			if(!visible) return;						patrol();						x = Math.round(x);		}						public function patrol()		{			if(x >= startX + distance || x < startX)			{				speed = -speed;				scaleX *= -1;			}			x += speed;		}				public function gravity()		{			// Is player on the ground?			if(!main.level.collide.hitTestPoint(stageX, stageY, true))			{				y += main.gravity;			}			while(main.level.collide.hitTestPoint(x, y - 1, true))			{				y -= 1;			}						if(stageY > stage.stageHeight)			{				trace("dead");				this.visible = false;			}		}	}}