package  {	import flash.display.MovieClip;		public class Bullet extends MovieClip	{		public var main:Main;				public var speedX:Number = 0;		public var speedY:Number = 0;				public var targetX:Number = 0;		public var targetY:Number = 0;				public function Bullet(main:Main) 		{			this.main = main;		}				public function update()		{			if(!this.visible) return;						this.x += speedX;			this.y += speedY;						if(main.level.collide.hitTestPoint(x, y, true) || x < 0 || x > stage.stageWidth || y < 0 || y > stage.stageHeight)			{				this.destroy();			}						for each (var enemy in main.level.enemies)			{				if(enemy.hitTestPoint(x, y, true) && enemy.visible)				{					enemy.hit();					this.destroy();				}			}					}				public function destroy()		{			this.visible = false;		}	}	}